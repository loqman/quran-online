<div class="col-lg-6 col-md-6 col-sm-12 pull-right">
  <%= simple_form_for(@author) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :permalink %>
      <%= f.input :direction, collection: %w(rtl ltr) %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
