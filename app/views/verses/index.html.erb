
<table class="table table-bordered table-responsive">
  <thead>
  <tr>
    <th><%= Verse.human_attribute_name :number %></th>
    <th><%= Verse.human_attribute_name :content %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @verses.each do |verse| %>
    <tr>
      <td style="text-align: center; vertical-align: middle;"><%= verse.number %></td>
      <td class="arabi"><%= verse.content.gsub(/\u0644\u0644\u0651\u064e\u0647/, "\u0644\u0644\u0647") %></td>
      <td><%= link_to 'Show', [@chapter, verse] %></td>
      <td><%= link_to 'Destroy', [@chapter, verse], method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

